.lz-images
  display flex
  flex-wrap wrap

  .lz-images-item
    width 300px
    height 200px
    position relative
    background #F5F5F5
    margin 10px

    img 
      max-height 90%
      max-width 90%
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      margin auto
      z-index 1
      cursor pointer

    p
      position absolute
      z-index 2
      background rgba(10, 10, 10, 0.5)
      color white
      left 0
      bottom 0
      width 100%
      padding 10px

.image-gallery-thumbnail-label
  background-color rgba(0, 0, 0, 1)
  color: white;
  background-color: #381e1e;
  font-size: 1em;
  height: 1em;
  text-shadow: 0 0 2px red;
